<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en" lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      i18n:domain="jyu.portfolio.layout">
  <body>
    <metal:tile define-macro="tile">
      <span class="tile-header"
            tal:define="mtool context/@@plone_tools/membership"
            tal:condition="python:mtool.checkPermission('Modify portal content', context)">
        <a class="tile-edit" href="#" tal:define="id view/id"
           tal:attributes="href string:@@edit-tile/${view/__name__}/${id}"
           ><img alt="Edit" i18n:attributes="alt"
                 tal:attributes="src context/edit.png/absolute_url"/></a>
        <a class="tile-delete" href="#" tal:define="id view/id"
           tal:attributes="href string:@@delete-tile?type=${view/__name__}&amp;id=${id}"
           ><img alt="Delete" i18n:attributes="alt"
                 tal:attributes="src context/delete_icon.png/absolute_url"/></a>
      </span>
      <metal:content define-slot="content">
        <p>HERE BE TILE</p>
      </metal:content>
    </metal:tile>
    <metal:tile define-macro="tile-removable">
      <span class="tile-header"
            tal:define="mtool context/@@plone_tools/membership"
            tal:condition="python:mtool.checkPermission('Modify portal content', context)">
        <a class="tile-delete" href="#" tal:define="id view/id"
           tal:attributes="href string:@@delete-tile?type=${view/__name__}&amp;id=${id}">
          <img alt="Delete" i18n:attributes="alt"
               tal:attributes="src context/delete_icon.png/absolute_url"/></a>
      </span>
      <metal:content define-slot="content">
        <p>HERE BE TILE</p>
      </metal:content>
    </metal:tile>
    <metal:tile define-macro="tile-permanent">
      <metal:content define-slot="content">
        <p>HERE BE TILE</p>
      </metal:content>
    </metal:tile>
  </body>
</html>
